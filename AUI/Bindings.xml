<Bindings>
  <Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
    <Category name="|cF6B34AAUI (Minimap)">
	  <Action name="AUI_Minimap_TOGGLE">
        <Down>AUI.Minimap.Toggle()</Down>
      </Action>
	  <Action name="AUI_zoom_IN">
        <Down>
			if AUI.Minimap.IsEnabled() then
				AUI.Minimap.ZoomIn()
			end
		</Down>
      </Action>
	  <Action name="AUI_zoom_OUT">
        <Down>
			if AUI.Minimap.IsEnabled() then
